@charset 'UTF-8';

.nui-atc {
  display: inline-block;
  position: relative;
  > div {
    background-color: rgb(255, 255, 255);
    border-bottom: 1px solid rgb(126, 157, 186);
    border-top: 1px solid rgb(126, 157, 186);
    left: 0;
    position: absolute;
    min-width: 100%;
    z-index: 8;
    > div {
      border-left: 1px solid rgb(126, 157, 186);
      border-right: 1px solid rgb(126, 157, 186);
      padding: 2px;
      white-space: nowrap;
      &.nui-hvr {
        background-color: rgb(51, 118, 220);
        color: rgb(255, 255, 255);
      }
    }
  }
}
